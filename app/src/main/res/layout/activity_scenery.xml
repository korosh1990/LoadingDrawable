<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/electric_fan_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fffcd03c"
        app:loading_renderer="ElectricFanLoadingRenderer" />

    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/day_night_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ff071c28"
        app:loading_renderer="DayNightLoadingRenderer" />

</LinearLayout>